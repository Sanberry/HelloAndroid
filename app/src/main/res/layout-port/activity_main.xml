<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:paddingTop="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_above="@id/phone"
            android:layout_toLeftOf="@id/business"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/number"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="UDACITY"
            android:textSize="23sp"
            android:textStyle="bold|normal" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/website"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/number"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/website"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="650-555-5555"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <ImageView
            android:id="@+id/www"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/website"
            android:src="@drawable/www" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:linksClickable="true"
            android:text="www.udacity.com"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/www"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/address"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/website"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="2465 Latham St, Mountain View"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <TextView
            android:id="@+id/postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="30dp"
            android:text="CA 94043"
            android:textSize="20sp"
            android:textStyle="bold|normal" />
    </RelativeLayout>
</RelativeLayout>

